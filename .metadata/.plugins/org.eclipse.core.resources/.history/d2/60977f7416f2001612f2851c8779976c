#include"keypad.h"
#include"lcd.h"
#include"uart.h"
#include "door.h"
uint8 correct;
int main()
{
	uint8 key;
	uint8 check_word='F';
	Init_Lcd();
	init_uart();
	SET_BIT(SREG,7);
	send_byte(0x11);
	while(check_word=='F')
	{
		check_word= password_first_time();
	}
	Row_Col_string(0, 0 , "success is done");
	correct=0;
	_delay_ms(1000);
	Clear_Lcd();
	while(1)
	{

		Row_Col_string(0, 0 , "'+':change pass");
		Row_Col_string(1, 0 , "'-':open door");
		key= keypad_getPressedKey();
		_delay_ms(500);
		send_byte(0x11);
		_delay_ms(50);
		if(key=='+')
		{
			send_byte('+');
			//Clear_Lcd();
			//Lcd_Send_Data(correct);
			//_delay_ms(1000);
			change_password();
		}

	}
}
